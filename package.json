{
  "name": "domestique",
  "version": "1.6.0",
  "description": "A modular DOM helper library.",
  "repository": "https://github.com/jsor/domestique.git",
  "author": {
    "name": "Jan Sorgalla",
    "url": "https://sorgalla.com",
    "email": "jsorgalla@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "dom",
    "helper",
    "utility",
    "dimension",
    "element",
    "event",
    "query",
    "selector",
    "on",
    "off",
    "ready"
  ],
  "files": [
    "src",
    "index.js"
  ],
  "browserslist": [
    "Chrome >= 61",
    "Edge >= 16",
    "Firefox >= 60",
    "iOS >= 10.3",
    "Safari >= 10.1"
  ],
  "xo": {
    "space": 4,
    "rules": {
      "max-params": [
        "warn",
        {
          "max": 5
        }
      ],
      "unicorn/prefer-node-append": "off"
    },
    "ignores": [
      "karma.conf.js"
    ],
    "globals": [
      "assert"
    ],
    "envs": [
      "node",
      "browser",
      "mocha"
    ]
  },
  "scripts": {
    "build:test:browserstack": "webpack test/index.js --debug --mode none --progress --output test/build.js",
    "build:test:browserstack-legacy": "BROWSERSLIST='defaults, IE >= 10' webpack test/index.js --debug --mode none --progress --output test/build-legacy.js --module-bind 'js=babel-loader?presets[]=babel-preset-env'",
    "compat": "compat --recursive --target src/ test/ --jsEnvs chrome61 edge16 firefox60 ios10_3 safari10_1 --htmlEnvs chrome61 edge16 firefox60 ios_saf10.3 safari10.1",
    "dev": "karma start",
    "lint": "xo",
    "test": "npm run lint && karma start --single-run",
    "test:browserstack": "npm run build:test:browserstack && browserstack-runner",
    "test:browserstack-legacy": "npm run build:test:browserstack-legacy && BROWSERSTACK_JSON=browserstack-legacy.json browserstack-runner"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "browserstack-runner": "^0.9.0",
    "chai": "^4.2.0",
    "compat-cli": "^0.1.4",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.5",
    "mocha": "^6.1.4",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "xo": "^0.24.0"
  }
}
